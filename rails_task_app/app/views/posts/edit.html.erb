<h1>編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @post, local: true) do |form| %>
      <%= form.label :"タイトル" %><br>
      <%= form.text_field :title, class: "form-control" %><br>
      <%= form.label :"開始日" %><br>
      <%= form.date_field :start_Day, class: "form-control" %><br>
      <%= form.label :"終了日" %><br>
      <%= form.date_field :End_Day, class: "form-control" %><br>
      <%= form.label :"内容" %><br>
      <%= form.text_field :content, class: "form-control" %><br>
      <%= form.submit %>
    <% end %>
  </div>
</div>
<div class="text-justify">
  <p><%= link_to "一覧へ戻る", "/" %></p>
  <p><%= link_to "予定を削除", post_path(params[:id]), method: :delete %></p>
</div>