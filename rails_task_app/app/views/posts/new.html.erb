<h1>新規作成</h1>


<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <% @post.errors.full_messages.each do |msg| %>
      <%= msg %><br>
      <% end %>
    </div>
  <% end %>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @post, local: true) do |form| %>
      <%= form.label :"タイトル" %><br>
      <%= form.text_field :title, class: "form-control" %><br>
      <%= form.label :"開始日" %><br>
      <%= form.date_field :start_Day, class: "form-control"%><br>
      <%= form.label :"終了日" %><br>
      <%= form.date_field :End_Day, class: "form-control" %><br>
      <%= form.label :"内容" %><br>
      <%= form.text_field :content, class: "form-control" %><br>
      <%= form.submit %>
    <% end %>
  </div>
</div>